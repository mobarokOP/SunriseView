<?xml version="1.0" encoding="utf-8"?>
<resources>
        <declare-styleable name="SunriseView">
            <!-- Track color -->
            <attr name="sunrise_track_color" format="color|reference"/>
            <!-- Track width -->
            <attr name="sunrise_track_width" format="dimension"/>

            <!-- Sun radius -->
            <attr name="sunrise_sun_radius" format="dimension"/>
            <!-- Sun color -->
            <attr name="sunrise_sun_color" format="color|reference"/>

            <!-- Shadow color -->
            <attr name="sunrise_shadow_color" format="color|reference"/>

            <!-- Label text size -->
            <attr name="sunrise_text_size" format="dimension"/>
            <!-- Label text color -->
            <attr name="sunrise_text_color" format="color|reference"/>
            <!-- Label vertical offset -->
            <attr name="sunrise_vertical_offset" format="dimension"/>
            <!-- Label horizontal gap -->
            <attr name="sunrise_horizontal_offset" format="dimension"/>
            <attr name="sunrise_sun_drawable" format="reference"/>
        </declare-styleable>
</resources>